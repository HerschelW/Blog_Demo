<%- include("partials/header.ejs"); %>
<div class="content">
   <h1>Compose</h1>
   <form class="post" action="/compose" method="POST">
      <div class="form-group">
         <label>Title</label>
         <textarea
            class="form-control"
            type="text"
            name="newTitle"
            autocomplete="off"
            autofocus="autofocus"
            rows="1"
         ></textarea>
         <label>Post</label>
         <textarea
            class="form-control"
            name="newPost"
            id="newPost"
            rows="8"
         ></textarea>
      </div>
      <button class="btn btn-primary" type="submit">Publish</button>
   </form>
</div>
<%- include("partials/footer.ejs"); %>
